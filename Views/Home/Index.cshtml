@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/keepmoving.jpg" alt="keep moving image" class="img-responsive" />
            <div class="carousel-caption">

            </div>
        </div>
        <div class="item">
            <img src="~/images/Ican.jpg" alt="I can image" class="img-responsive" />
            <div class="carousel-caption">

            </div>
        </div>
        <div class="item">
            <img src="~/images/DontKillTheDream.jpg" alt="Don't kill the dream image" class="img-responsive" />
            <div class="carousel-caption">
                
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">Cute kitty</div>
            <img style="height:10em;width:100%" src="~/images/kitty.jpg" />
            <div class="well">
                <h3>The climb</h3>
                <p>First tree</p>
                <p>Going to be a lion when he grows up!</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">Announcing this years model!</div>
            <img style="height:10em;width:100%" src="~/images/harley.jpg" />
            <div class="well">
                <h3>2016 Model is here!</h3>
                <p>Get your bike today</p>
                <p>American bikes</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-warning">
            <div class="panel-heading">Seminars</div>
            <img style="height:10em;width:100%" src="~/images/DontKillTheDream.jpg" />
            <div class="well">
                <h3>Lern how to</h3>
                <p>Follow you dreams!</p>
                <p>Face life head on!</p>
            </div>
        </div>
    </div>
</div>
